<h1>New mailbag</h1>

<%= error_messages_for :mailbag %>

<% form_for(@mailbag) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Author</b><br />
    <%= f.collection_select :author_id, User.find(:all), :id, :realname %>
  </p>

  <p>
    <b>Editor</b><br />
    <%= f.collection_select :editor_id, User.find(:all), :id, :realname %>
  </p>

  <p>
    <b>Quay</b><br />
    <%= f.collection_select :quay_id, Quay.find(:all), :id, :name %>
  </p>

  <p>
    <b>Dearx</b><br />
    <%= f.text_field :dearx %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Fromx</b><br />
    <%= f.text_field :fromx %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', mailbags_path %>
